{
  "manifest_version": 3,
  "name": "Hoda Assistant",
  "version": "0.0.1",
  "description": "Overlay avatar assistant powered by webLLM",
  "permissions": ["storage", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["ui.bundle.css", "models/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
